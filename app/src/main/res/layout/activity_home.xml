<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container_home"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activities.Home">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_above="@id/btn_checkout_cart"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:fitsSystemWindows="true"
                app:contentScrim="#0e0d0e"
                app:expandedTitleTextAppearance="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider"
                    app:layout_collapseMode="parallax"
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_alignParentTop="true">

                </com.daimajia.slider.library.SliderLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/body_linear_layout"
            android:layout_height="match_parent"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:paddingStart="16dp"
                    android:id="@+id/selected_restaurant_label"
                    android:text="@string/restaurants_near_you"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/filter_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:src="@drawable/ic_tune_black_24dp"
                    android:tint="@color/transparentBlack" />
            </RelativeLayout>
            <!--            <HorizontalScrollView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:scrollbars="none"-->
            <!--                android:layout_height="wrap_content">-->
            <android.support.design.chip.ChipGroup
                android:id="@+id/filter_group"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"

                android:visibility="gone"
                app:singleSelection="true">

                <android.support.design.chip.Chip
                    android:id="@+id/under_30_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Under 30 min"
                    android:theme="@style/Material"
                    android:checkable="true"
                    app:chipIcon="@drawable/ic_baseline_access_time_24"
                    app:chipIconTint="@color/transparentBlack" />

                <android.support.design.chip.Chip
                    android:id="@+id/pizza"
                    android:layout_width="wrap_content"
                    android:checkable="true"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Free Delivery"
                    android:theme="@style/Material"
                    app:chipIcon="@drawable/ic_baseline_local_pizza_24"
                    app:chipIconTint="@color/transparentBlack" />

                <android.support.design.chip.Chip
                    android:id="@+id/burger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Burger"
                    android:checkable="true"
                    android:theme="@style/Material"
                    app:chipIcon="@drawable/ic_baseline_fastfood_24"
                    app:chipIconTint="@color/transparentBlack" />

                <android.support.design.chip.Chip
                    android:id="@+id/free_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Pizza"
                    android:checkable="true"
                    android:theme="@style/Material"
                    app:chipIcon="@drawable/ic_baseline_money_off_24"
                    app:chipIconTint="@color/transparentBlack" />

                <android.support.design.chip.Chip
                    android:id="@+id/under_30_min1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Chicken"
                    android:checkable="true"
                    android:theme="@style/Material"
                    app:chipIcon="@drawable/ic_baseline_access_time_24"
                    app:chipIconTint="@color/transparentBlack" />

                <android.support.design.chip.Chip
                    android:id="@+id/local_dishes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Pasta"
                    android:checkable="true"
                    android:theme="@style/Material"
                    app:chipIcon="@drawable/ic_restaurant_black_24dp"
                    app:chipIconTint="@color/transparentBlack" />

                <android.support.design.chip.Chip
                    android:id="@+id/pizza1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Vegan"
                    android:checkable="true"
                    android:theme="@style/Material"
                    app:chipIcon="@drawable/ic_baseline_local_pizza_24"
                    app:chipIconTint="@color/transparentBlack" />

                <android.support.design.chip.Chip
                    android:id="@+id/local_dishes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Local Dish"
                    android:checkable="true"
                    android:theme="@style/Material"
                    app:chipIcon="@drawable/ic_restaurant_black_24dp"
                    app:chipIconTint="@color/transparentBlack" />

                <android.support.design.chip.Chip
                    android:id="@+id/burger1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Featured"
                    android:checkable="true"
                    android:theme="@style/Material"
                    app:chipIcon="@drawable/ic_baseline_fastfood_24"
                    app:chipIconTint="@color/transparentBlack" />
            </android.support.design.chip.ChipGroup>
            <!--            </HorizontalScrollView>-->

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/homeSwipeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.habeshastudio.fooddelivery.helper.EmptyRecyclerView
                    android:id="@+id/recycler_menu"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/btn_checkout_cart"
                    android:scrollbars="none" />

            </android.support.v4.widget.SwipeRefreshLayout>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/empty_view_restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"
            android:tint="@color/grey_active" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="64dp"
            android:gravity="center"
            android:text="@string/no_restaurant_around"
            android:textColor="@color/grey_active"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_checkout_cart"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:layout_above="@id/bottom_navigation_view_linear"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:visibility="visible"
        android:focusable="true"
        android:weightSum="3">

        <TextView
            android:id="@+id/checkout_layout_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ETB 200"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/checkout"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/items_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <com.gauravk.bubblenavigation.BubbleNavigationLinearView
        android:id="@+id/bottom_navigation_view_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_anchorGravity="bottom"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/l_item_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="@color/colorPrimaryDark"
            app:bt_colorInactive="@color/blue_active"
            app:bt_icon="@drawable/ic_home_black_24dp"
            app:bt_shape="@drawable/transition_background_drawable_home"
            app:bt_title="@string/home" />




        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/l_item_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="@color/green_active"
            app:bt_colorInactive="@color/green_inactive"
            app:bt_icon="@drawable/ic_playlist"
            app:bt_shape="@drawable/transition_background_drawable_list"
            app:bt_title="@string/orders" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/l_item_profile_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="@color/purple_active"
            app:bt_colorInactive="@color/purple_inactive"
            app:bt_icon="@drawable/ic_like"
            app:bt_shape="@drawable/transition_background_drawable_like"
            app:bt_title="@string/likes" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/l_item_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="@color/red_active"
            app:bt_colorInactive="@color/red_inactive"
            app:bt_icon="@drawable/ic_person"
            app:bt_shape="@drawable/transition_background_drawable_person"
            app:bt_title="@string/profile" />
    </com.gauravk.bubblenavigation.BubbleNavigationLinearView>
</RelativeLayout>
