<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg_light"
    tools:context=".activities.Profile">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:id="@+id/main_coordinator"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/materialup.appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/main.collapsing"
                android:layout_width="match_parent"
                android:background="@color/grey_bg_light"
                android:layout_height="240dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >
                ​
                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg"
                    app:layout_collapseMode="parallax"
                    android:contentDescription="TODO" />
            </android.support.design.widget.CollapsingToolbarLayout>

            ​
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            app:behavior_overlapTop="24dp"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/profile_items_holder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingBottom="32dp"
                android:visibility="visible"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:elevation="10dp"
                                android:id="@+id/name_display"
                                android:text="@string/loading"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_xxlarge"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                                android:textColor="@color/colorLightBlack" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:layout_marginRight="15dp"
                                    android:contentDescription="TODO"
                                    android:src="@drawable/ic_place_black_24dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/address_display"
                                    android:text="@string/address_not_set_yet"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textColor="@color/colorLightBlack" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/balance_withdraw"
                                android:background="@drawable/bg_ui_white"
                                android:clickable="true"
                                android:padding="12dp"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:layout_marginRight="15dp"
                                    android:contentDescription="TODO"
                                    android:src="@drawable/ic_account_balance_black_24dp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/account_balance_etb"
                                        android:textColor="@color/com_facebook_messenger_blue"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/balance_display"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/com_facebook_messenger_blue"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/birr"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                        android:textColor="@color/com_facebook_messenger_blue"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <Button
                                    android:id="@+id/orders"
                                    android:layout_width="0dp"
                                    android:layout_height="45dp"
                                    android:layout_marginRight="10dp"
                                    android:backgroundTint="@color/colorYellow"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_ui"
                                    android:layout_marginBottom="2dp"
                                    android:text="@string/orders"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/history"
                                    android:layout_width="0dp"
                                    android:layout_height="45dp"
                                    android:layout_marginLeft="10dp"
                                    android:backgroundTint="@color/colorYellow"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_ui"
                                    android:layout_marginBottom="2dp"
                                    android:text="@string/history"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorWhite" />

                            </LinearLayout>


                        </LinearLayout>



                    <View
                        android:layout_width="0dp"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:orientation="vertical">

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:id="@+id/easy_mode_switch"
                                app:backgroundTint="@android:color/white"
                                app:elevation="2dp"
                                android:layout_margin="2dp"
                                app:fabSize="normal"
                                app:rippleColor="@color/white"
                                android:tint="@color/grey_active"
                                android:focusable="true"
                                app:srcCompat="@drawable/ic_wb_sunny_black_24dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:orientation="vertical">

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:id="@+id/language_switch"
                                app:backgroundTint="@android:color/white"
                                app:elevation="2dp"
                                android:layout_margin="2dp"
                                app:fabSize="normal"
                                app:rippleColor="@color/red_inactive"
                                android:focusable="true"
                                app:srcCompat="@drawable/ic_translate_black_24dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:orientation="vertical">

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                app:backgroundTint="@android:color/white"
                                app:elevation="2dp"
                                android:id="@+id/notification_switch"
                                app:fabSize="normal"
                                android:layout_margin="2dp"
                                app:rippleColor="@color/red_inactive"
                                android:focusable="true"
                                app:srcCompat="@drawable/ic_notifications_black_24dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:orientation="vertical">

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                app:backgroundTint="@android:color/white"
                                app:elevation="2dp"
                                app:fabSize="normal"
                                android:id="@+id/currency_switch"
                                android:layout_margin="2dp"
                                app:rippleColor="@color/red_inactive"
                                android:focusable="true"
                                app:srcCompat="@drawable/ic_local_atm_black_24dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/more_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="@string/more_options"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/btnTransactions"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_ui_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="TODO"
                                android:src="@drawable/ic_favorite_black_24dp"
                                android:tint="@color/orange_active" />

                            <TextView
                                android:id="@+id/favourites"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:text="@string/my_favourites"
                                android:textColor="@color/colorLightBlack"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gery_inactive" />

                        <LinearLayout
                            android:id="@+id/btnPaymentMethod"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_ui_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="TODO"
                                android:src="@drawable/ic_payment_black_24dp"
                                android:tint="@color/orange_active" />

                            <TextView
                                android:id="@+id/txt_payment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:text="@string/setup_payment_method"
                                android:textColor="@color/colorLightBlack"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gery_inactive" />

                        <LinearLayout
                            android:id="@+id/add_voucher"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_ui_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="TODO"
                                android:src="@drawable/ic_account_balance_black_24dp"
                                android:tint="@color/orange_active" />

                            <TextView
                                android:id="@+id/txt_add_voucher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:text="@string/recharge_balance"
                                android:textColor="@color/colorLightBlack"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gery_inactive" />

                        <LinearLayout
                            android:id="@+id/btnPromoCode"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_ui_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="TODO"
                                android:src="@drawable/ic_home_black_24dp"
                                android:tint="@color/orange_active" />

                            <TextView
                                android:id="@+id/txt_delivery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:text="@string/set_home_address"
                                android:textColor="@color/colorLightBlack"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gery_inactive" />


                        <LinearLayout
                            android:id="@+id/btnShare"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_ui_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="TODO"
                                android:src="@drawable/ic_share_black_24dp"
                                android:tint="@color/orange_active" />

                            <TextView
                                android:id="@+id/txt_share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:text="@string/share_dine"
                                android:textColor="@color/colorLightBlack"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gery_inactive" />

                        <LinearLayout
                            android:id="@+id/btn_help"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_ui_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="TODO"
                                android:src="@drawable/ic_help_black_24dp"
                                android:tint="@color/orange_active" />

                            <TextView
                                android:id="@+id/txt_help"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:text="@string/help"
                                android:textColor="@color/colorLightBlack"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp" />

                        <Button
                            android:id="@+id/btn_about"
                            style="?borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_ui_white"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="16dp"
                            android:text="@string/about"
                            android:textColor="#666666" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gery_inactive" />

                        <Button
                            android:id="@+id/btn_feedback"
                            style="?borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginBottom="64dp"
                            android:background="@drawable/bg_ui_white"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="16dp"
                            android:text="@string/send_feedback"
                            android:textColor="#666666" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/btn_checkout_cart"
        android:orientation="horizontal"
        android:weightSum="3"
        android:visibility="gone"
        android:layout_above="@id/bottom_navigation_view_linear"
        android:clickable="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/colorPrimary"
        android:layout_height="48dp"
        android:focusable="true">

        <TextView
            android:layout_width="0dp"
            android:id="@+id/checkout_layout_price"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/checkout"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:text=""
            android:id="@+id/items_count"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <com.gauravk.bubblenavigation.BubbleNavigationLinearView
        android:id="@+id/bottom_navigation_view_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/l_item_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="@color/red_active"
            app:bt_colorInactive="@color/red_inactive"
            app:bt_icon="@drawable/ic_home_black_24dp"
            app:bt_shape="@drawable/transition_background_drawable_home"
            app:bt_title="@string/home" />


        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/l_item_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="@color/green_active"
            app:bt_colorInactive="@color/green_inactive"
            app:bt_icon="@drawable/ic_playlist"
            android:visibility="gone"
            app:bt_shape="@drawable/transition_background_drawable_list"
            app:bt_title="@string/orders" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/l_item_profile_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="@color/purple_active"
            app:bt_colorInactive="@color/purple_inactive"
            app:bt_icon="@drawable/ic_like"
            android:visibility="gone"
            app:bt_shape="@drawable/transition_background_drawable_like"
            app:bt_title="@string/likes" />


        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/l_item_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="@color/orange_active"
            app:bt_colorInactive="@color/orange_inactive"
            app:bt_icon="@drawable/ic_search"
            android:visibility="gone"
            app:bt_shape="@drawable/transition_background_drawable_search"
            app:bt_title="@string/search" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/l_item_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="@color/red_active"
            app:bt_colorInactive="@color/red_inactive"
            app:bt_icon="@drawable/ic_person"
            app:bt_shape="@drawable/transition_background_drawable_person"
            app:bt_title="@string/profile" />


    </com.gauravk.bubblenavigation.BubbleNavigationLinearView>
</RelativeLayout>