<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FoodDetail">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:fitsSystemWindows="true"
            app:expandedTitleTextAppearance="@color/grey_active"
            app:collapsedTitleTextAppearance="@color/grey_active"
            app:contentScrim="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/img_food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:transitionName="@string/transition_image"
                android:background="@color/white"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:behavior_overlapTop="56dp"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:background="#99FFFFFF"
                app:cardElevation="1dp"
                android:id="@+id/card_info"
                app:cardCornerRadius="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/food_name"
                        android:transitionName="@string/transition_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textColor="@color/colorLightBlack"
                        android:text="@string/name_loading"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/food_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:lineSpacingMultiplier="1.5"
                        android:text="@string/description_loading"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="ቋ · italian"/>

                    <LinearLayout
                        android:id="@+id/layout_time_ratting"
                        android:background="@color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:layout_gravity="center_vertical"
                            android:text="⏱"
                            android:textSize="24sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="25-30 MINS"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="?android:ratingBarStyleSmall"
                            android:layout_gravity="end|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:layout_marginStart="16dp"
                            android:focusable="true"
                            android:isIndicator="true"
                            android:max="5"
                            android:rating="0" />


                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/show_comment_button"
                android:layout_width="match_parent"
                android:text="@string/see_food_comments"
                android:textStyle="italic"
                android:background="@drawable/bg_ui_white"
                android:clickable="true"
                android:padding="8dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textColor="@color/colorLightBlack"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/menu"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/select_menu_to_add_to_cart"
                android:textColor="@color/colorLightBlack"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/details_list"
                android:scrollbars="vertical"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/btn_checkout_cart"
        android:orientation="horizontal"
        android:weightSum="3"
        android:visibility="visible"
        android:clickable="true"
        android:paddingTop="12dp"
        app:layout_anchor="@id/nestedScrollView"
        app:layout_anchorGravity="bottom"
        android:paddingBottom="12dp"
        android:background="@color/colorPrimary"
        android:layout_height="48dp">

        <TextView
            android:layout_width="0dp"
            android:id="@+id/checkout_layout_price"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="ETB 200"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/checkout"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:text="1"
            android:id="@+id/items_count"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
