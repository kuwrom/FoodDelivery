<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_cart_layout"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activities.Cart">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@id/checkout_layout"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/delivering_to_your_current_location"
                android:layout_margin="16dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:textColor="@color/colorLightBlack"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/gery_inactive" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/cart_guide_text"
                android:text="@string/i_e_swipe_from_right_to_delete"
                android:layout_margin="16dp"
                android:visibility="gone"
                android:layout_gravity="left"
                android:gravity="left"
                android:textColor="@color/blue_active"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/listCart"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:id="@+id/add_more_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bg_ui_white"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/cart_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="TODO"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_add_circle_24"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/cart_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:text="Add More Food"
                    android:textAllCaps="true"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/grey_active" />
            <EditText
                android:id="@+id/enter_promo"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:background="@color/white"
                android:visibility="gone"
                android:hint="@string/enter_your_promo_code_here" />

            <LinearLayout
                android:id="@+id/btnPromoCode"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/bg_ui_white"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_local_offer_black_24dp"
                    android:contentDescription="TODO"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/add_promo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:text="@string/add_promo_code"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="@color/gery_inactive" />

            <EditText
                android:id="@+id/add_note"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:background="@drawable/edit_text_border"
                android:padding="8dp"
                android:hint="@string/add_a_note" />
            <View
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_height="1dp"
                android:background="@color/gery_inactive" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="@string/subtotal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/blue_grey_active"
                    android:textSize="16sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="@string/tax"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/blue_grey_active"
                    android:textSize="16sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="@string/delivery_fee"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/delivery_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/blue_grey_active"
                    android:textSize="16sp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_height="1dp"
                android:background="@color/gery_inactive" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="left"
                    android:text="@string/total"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="left"
                    android:text=""
                    android:background="@drawable/edit_style_small"
                    android:textColor="@color/orange_active"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gery_inactive" />

            <RelativeLayout
                android:id="@+id/btnCashChange"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/bg_ui_white"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/payment_method_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/pay_when_delivered_to_you"
                    android:textColor="@color/grey_active"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/change"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>



    <Button
        android:layout_width="match_parent"
        android:id="@+id/checkout_layout"
        android:layout_height="56dp"
        android:background="@drawable/bg_ui_cart"
        android:layout_margin="16dp"
        android:text="@string/place_order"
        app:backgroundTint="@color/colorPrimary"
        android:focusable="true"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true">


    </Button>

</RelativeLayout>
